@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <h1>All Roles</h1>
    <br />
    <br />


    <a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create New Role</a>

    <form asp-action="Index">
        <div class="row align-items-center justify-content-center mt-4">
            <div class=" col-8">
                <input type="text" class="form-control" name="SearchValue" placeholder="Example : Search By Name Role 'Admin' " />
            </div>
            <div class=" col-4">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </form>


    @if (Model?.Count() > 0)
    {
        <table class="mt-4 table table-striped table-hover w-100">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(U => U.Id)</th>
                    <th>@Html.DisplayNameFor(U => U.Name)</th>
                    <th>Details </th>
                    <th>Update </th>
                    <th>Delete </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(M => role.Id)</td>
                        <td>@Html.DisplayFor(M => role.Name)</td>
                        <partial name="_ButtonsPartialView" model="@role.Id" />
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="mt-5 alert-warning">
            <h3>There is No Roles</h3>
        </div>
    }

</div>
