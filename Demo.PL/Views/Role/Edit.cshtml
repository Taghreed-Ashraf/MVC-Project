@model IdentityRole


@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Update The Role</h1>

    <form asp-action="Edit">
        <div asp-validation-summary="All"></div>
        <input hidden asp-for="Id" />
        

        <partial name="PartialViews/CreateEditRolePartialView" />

        <div class="my-3">
            <a class="btn btn-info" asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-RoleId="@Model.Id">Add Or Remove Users</a>
        </div>

        <input type="submit" value="Save" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </form>

</div>



@section validationScriptSection {

    <partial name="_ValidationScriptsPartial" />
}